<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a6de0"
    android:orientation="vertical"
    tools:context=".Userprof">

    <!-- Include the Toolbar -->
    <include layout="@layout/toolbar"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Information"
                android:textSize="24sp"
                android:textColor="#2a6de0"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#2a6de0"
                app:hintTextColor="#2a6de0">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#2a6de0"
                app:hintTextColor="#2a6de0">

                <TextView
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#2a6de0"
                app:hintTextColor="#2a6de0">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#2a6de0"
                app:hintTextColor="#2a6de0">

                <TextView
                    android:id="@+id/addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/driver_license_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#2a6de0"
                app:hintTextColor="#2a6de0">

                <TextView
                    android:id="@+id/drvrlicence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/driver_vehicle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#2a6de0"
                app:hintTextColor="#2a6de0">

                <TextView
                    android:id="@+id/drvrvehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/driver_availability_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#2a6de0"
                app:hintTextColor="#2a6de0">

                <TextView
                    android:id="@+id/drvravlblty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/driver_rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#2a6de0"
                app:hintTextColor="#2a6de0">

                <TextView
                    android:id="@+id/drvrrating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressu"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>