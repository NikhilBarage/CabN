<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".FirstActivity"
    android:orientation="vertical"
    android:background="#2a6de0">

    <androidx.cardview.widget.CardView
        android:id="@+id/view1"
        android:layout_width="320dp"
        android:layout_height="220dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:visibility="visible"
        android:layout_margin="16dp"
        android:stateListAnimator="@android:animator/fade_in">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CabNCarry"
                android:textColor="#2a6de0"
                android:textStyle="bold"
                android:textSize="48sp"
                android:letterSpacing="0.05"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Safe Ride Partner"
                android:textColor="#757575"
                android:textSize="18sp"
                android:letterSpacing="0.02"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience the future of travel"
                android:textColor="#9e9e9e"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="220dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:layout_marginBottom="40dp"
            android:stateListAnimator="@android:animator/fade_in">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CabNCarry"
                    android:textColor="#2a6de0"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Safe Ride Partner"
                    android:textColor="#757575"
                    android:textSize="18sp"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience the future of travel"
                    android:textColor="#9e9e9e"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/safetyButton"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:text="Move with Safety"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:letterSpacing="0.05"
            app:cornerRadius="30dp"
            app:backgroundTint="#2a6de0"
            android:layout_marginBottom="32dp"
            app:elevation="8dp"
            android:stateListAnimator="@android:animator/fade_in"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getStartedButton"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:text="Get Started"
            android:textColor="#2a6de0"
            android:textSize="18sp"
            android:letterSpacing="0.05"
            app:cornerRadius="30dp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#2a6de0"
            app:strokeWidth="2dp"
            android:layout_marginTop="120dp"
            app:elevation="8dp"
            android:stateListAnimator="@android:animator/fade_in"/>

    </LinearLayout>

</LinearLayout>