<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ridedetails"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E30C33"
                android:text="Pending"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date: 12-03-2025"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="end"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp"/>


        <TextView
            android:id="@+id/pickk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:padding="5dp"
            android:text="PickUp Time - "
            android:textSize="16sp"
            android:textColor="#2a6de0"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#2a6de0"/>

            <TextView
                android:id="@+id/txtStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="From: Location"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2a6de0"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:background="#E0E0E0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#2a6de0"/>

            <TextView
                android:id="@+id/txtEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="To: Location"
                android:textSize="16sp"
                android:textColor="#2a6de0"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtCar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Car: Sedan"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹250.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2a6de0"/>

        </LinearLayout>
j
        <TextView
            android:id="@+id/txtRideCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:text="RideCode: XXXX"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#2a6de0"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>