<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    android:orientation="vertical"
    tools:context=".Registration" >

    <!-- Include the Toolbar -->
    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/reg_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Registration "
            android:fontFamily="casual"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:textSize="38sp" />

        <!-- Phone Number Input Section -->
        <LinearLayout
            android:id="@+id/reg_phone_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_backbtn"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" Name "
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text=" Phone No. "
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text=" Email Address "
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text=" User Type "
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text=" Address "
                android:layout_marginBottom="9dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>


        <!-- Phone Number Input Section -->
        <LinearLayout
            android:id="@+id/reg_phone_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_backbtn"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/reg_phone_layout"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint=" Full Name "
                android:layout_marginTop="3dp"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="18sp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Phone Number"
                android:maxLength="10"
                android:inputType="phone"
                android:layout_marginTop="3dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="18sp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint=" Email Address "
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:layout_marginTop="3dp"
                android:textColorHint="#AAAAAA"
                android:textSize="18sp"
                android:padding="8dp"/>

<!--            Radio Button-->
            <RadioGroup
                android:id="@+id/usertype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:padding="1dp"
                android:orientation="horizontal"
                android:popupBackground="@color/white"
                android:layout_marginLeft="10dp" >

                <RadioButton
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:checked="true"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver"
                    android:textColor="#FFFFFF"
                    android:layout_weight="1" />

            </RadioGroup>

            <EditText
                android:id="@+id/addresss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Address"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:layout_marginTop="3dp"
                android:textColorHint="#AAAAAA"
                android:textSize="18sp"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ifdriver"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/reg_phone_layout2"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" Car Type "
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:textColor="#FFFFFF"
                    android:text=" Car Number "
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/cartype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:textSize="18sp"
                    android:layout_marginTop="3dp"
                    android:padding="8dp"
                    android:popupBackground="@color/white"
                    android:layout_marginLeft="10dp" />


                <EditText
                    android:id="@+id/carnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint=" XX XX XXXX "
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="3dp"
                    android:textColorHint="#AAAAAA"
                    android:textSize="18sp"
                    android:padding="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/reg_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ifdriver"
            android:layout_centerHorizontal="true"
            android:text="Register"
            android:textSize="20dp" />

        <!-- Register Link -->
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_next_btn"
            android:text="Have an Account? Login"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

